Message -default {
  padding: 1rem .5rem

  display: grid
  grid-template-columns: 6rem 1fr auto
  grid-gap: 1.5rem

  section.left {
    grid-column: 1

    display: grid
    align-content: start
    justify-items: end

    div.avatar {
      grid-row: 1
      a img { }
    }

    div.author {
      grid-row: 2
      font-weight: 600
      text-align: right
      (a) { color: #222 }
    }

    div.timestamp {
      grid-row: 3
      a {
        font-size: .9rem
        $textSubtle
      }
    }
  }

  section.body {
    grid-column: 2

    display: grid
    align-content: start

    div.title {
      grid-row: 1
      font-size: .9rem
      $textSubtle
      (a) { $textSubtle }
    }

    div.content {
      grid-row: 2
      (img) {
        max-width: 100%
      }
      (video) {
        max-width: 100%
      }
    }

    footer.backlinks {
      grid-row: 3
    }

    div.raw-content {
      grid-row: 4
      pre {
        border: 1px gainsboro solid
        padding: .8rem
        background-color: #f5f5f5
        color: #c121dc
        padding: .3rem
        white-space: pre-wrap
        word-wrap: break-word

        span {
          font-weight: 600
        }
        a {
          word-break: break-all
        }
      }
    }

  }

  section.right {
    grid-column: 3

    display: grid
    justify-items: end
    align-content: space-between

    div.meta {
      grid-row: 1

      display: grid
      justify-items: end
      grid-gap: .5rem

      i, div, a { }

      a.channel { grid-row: 1 }
    }

    div.actions {
      grid-row: 2
      justify-self: end

      display: grid
      grid-auto-flow: column
      grid-gap: .8rem

      font-size: .9rem

      div.MessageLike { }
      i.MessageQuote { margin-top: 3px }
      i.MessageReply { margin-top: 1px }
    }
  }

  /* UnreadFeature (search codebase for this if extracting) */

  /* initially read */
  -read {
  }

  /* initially unread */
  -unread {
    section.right {
      div.meta {
        i.unread {
          display: initial
          transition: color 1s ease-in
          color: hotpink
        }
      }
    }
  }

  /* initially unread, but subsequently marked read */
  -unread {
    -read {
      section.right {
        div.meta {
          i.unread {
            color: #bbb
          }
        }
      }
    }
  }
}
